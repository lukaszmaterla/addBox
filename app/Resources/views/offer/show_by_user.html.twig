{% extends '::base.html.twig' %}
{% block body %}
    <a class="btn btn-success" href="{{ path('fos_user_profile_show') }}">Back to profile</a>
    <table class="table">
        <thead>
        <tr>
            <td><h2>Actual Offer</h2></td>
        </tr>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Expiredat</th>
            <th>Price</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td><a href="{{ path('offer_show', { 'id': offer.id }) }}">{{ offer.title }}</a></td>
                <td>{{ offer.description }}</td>
                <td>{% if offer.expiredAt %}{{ offer.expiredAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ offer.price }} PLN</td>
                <td>
                    <a class="btn btn-success" href="{{ path('offer_show', { 'id': offer.id }) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('offer_edit', { 'id': offer.id }) }}">edit</a>
                    <a class="btn btn-danger" href="{{ path('offer_delete', { 'id': offer.id }) }}">delete</a>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td><a class="btn btn-primary" href="{{ path('offer_new') }}">Add new offer</a></td>
        </tr>
        </tbody>
    </table>
    <table class="table">
        <thead>
        <tr>
            <td><h2>Expired Offer</h2></td>
        </tr>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Expiredat</th>
            <th>Price</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% if archiveOffers %}

            {% for archiveOffer in archiveOffers %}
                <tr>
                    <td><a href="{{ path('offer_show', { 'id': archiveOffer.id }) }}">{{ archiveOffer.title }}</a></td>
                    <td>{{ archiveOffer.description }}</td>
                    <td>{% if archiveOffer.expiredAt %}{{ archiveOffer.expiredAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ archiveOffer.price }} PLN</td>
                    <td>
                        <a class="btn btn-success" href="{{ path('offer_show', { 'id': archiveOffer.id }) }}">show</a>
                        <a class="btn btn-primary" href="{{ path('offer_edit', { 'id': archiveOffer.id }) }}">edit</a>
                        <a class="btn btn-danger"
                           href="{{ path('offer_delete', { 'id': archiveOffer.id }) }}">delete</a>
                    </td>
                </tr>
            {% endfor %}

        {% else %}
            <tr>
                <td>Wszystkie og≈Çoszenia aktywne</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
{% endblock %}