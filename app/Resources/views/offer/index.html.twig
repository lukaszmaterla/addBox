{% extends 'base.html.twig' %}

{% block body %}
    <h1>Offers list</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Expiredat</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td><a href="{{ path('offer_show', { 'id': offer.id }) }}">{{ offer.title }}</a></td>
                <td>{{ offer.description }}</td>
                <td>{% if offer.expiredAt %}{{ offer.expiredAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('offer_show', { 'id': offer.id }) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('offer_edit', { 'id': offer.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-default" href="{{ path('offer_new') }}">Create a new offer</a>
{% endblock %}
