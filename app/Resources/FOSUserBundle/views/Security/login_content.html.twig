{% extends '@FOSUser/layout.html.twig' %}
{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <div class="form-group">
        <label for="username" class="col-sm-2 control-label">{{ 'security.login.username'|trans }}</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="username"/>
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">{{ 'security.login.password'|trans }}</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="password"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input class="btn btn-success" type="submit" id="_submit" name="_submit"
                   value="{{ 'security.login.submit'|trans }}"/>
            <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-success">Remind password</a>
        </div>
    </div>
</form>
{% endblock %}